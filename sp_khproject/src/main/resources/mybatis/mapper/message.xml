<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="Chat">

	
	<!-- 채팅 대화 DB저장 -->
	<insert id="insertChatting" parameterType="messageDto">
		INSERT INTO CHATTING(CH_CONTENT)
		VALUES(CHATTING.SEQ.NEXTVAL, #{ch_content})
	</insert>
	
	<!-- 채팅 내용 조회 -->
	<select id="selectChatting" resultType="messageDto" parameterType="messageDto">		
		SELECT CH_CONTENT    
		FROM CHATTING 
	</select>



</mapper>